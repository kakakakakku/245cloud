= #pagination(@user)

%hr

= image_tag @user.icon

%ul
  - @user.musics.each do |music|
    = link_to image_tag(music.icon2), "/musics/#{music.id}"
    = "(#{music.total})"

- if current_user && current_user.chatting?
  %hr
  - @user.comments.each do |comment|
    = link_to comment.room.title, comment.room
    = comment.content
    %br
